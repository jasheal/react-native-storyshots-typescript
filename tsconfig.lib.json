{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "target": "es2017",
    "lib": ["es5", "es6", "es7", "es2017"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react-native",
    "moduleResolution": "node",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "jest",
      "react",
      "react-native",
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "lib/**/*",
    "**/*.test.ts",
    "**/*.spec.js",
    "**/*.story.tsx"
  ]
}